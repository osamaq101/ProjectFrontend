@model AuthAppFrontend.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="card mx-auto shadow" style="max-width: 400px; border-radius: 15px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Register</h2>

            <!-- Show success message -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Message"]
                </div>
            }

            <!-- Show error message -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- Registration Form -->
            <form method="post" asp-controller="Auth" asp-action="Register">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="passwordHash" class="form-label">Password</label>
                    <input asp-for="passwordHash" type="password" class="form-control" placeholder="Enter a password" />
                    <span asp-validation-for="passwordHash" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>
            </form>

            <!-- Back to Login -->
            <div class="text-center">
                <span>Already have an account?</span>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-link">Log In</a>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
